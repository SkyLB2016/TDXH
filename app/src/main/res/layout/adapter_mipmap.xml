<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="@dimen/wh_48"
    app:cardBackgroundColor="@android:color/background_light"
    app:cardCornerRadius="@dimen/wh_8"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wh_8">

        <!--    <com.sky.base.widget.CircleImageView-->
        <!--        android:id="@+id/image"-->
        <!--        android:layout_width="@dimen/wh_72"-->
        <!--        android:layout_height="@dimen/wh_72"-->
        <!--        android:background="#f0f0f0"-->
        <!--        android:scaleType="fitXY"-->
        <!--        android:src="@mipmap/ic_launcher" />-->
        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#f0f0f0"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wh_16"
            android:layout_toRightOf="@id/image"
            android:text="calssname"
            android:textSize="@dimen/text_18"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginLeft="@dimen/wh_16"
            android:layout_marginTop="@dimen/wh_4"
            android:layout_toRightOf="@id/image"
            android:fontFamily="sans-serif-condensed"
            android:text="描述"
            android:textSize="@dimen/text_12" />
        <TextView
            android:id="@+id/tvSuffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvType"
            android:layout_marginLeft="@dimen/wh_16"
            android:layout_marginTop="@dimen/wh_4"
            android:layout_toRightOf="@id/image"
            android:fontFamily="sans-serif-condensed"
            android:text="描述"
            android:textSize="@dimen/text_12" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>