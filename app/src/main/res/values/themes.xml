    <!-- 主题: Theme.SKY -->
    <style name="AppTheme.SKY1" parent="Theme.Material3.DayNight">
        <!-- 1. 颜色映射 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorPrimaryContainer">@color/onPrimary</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>

        <item name="android:background">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>

        <!-- 2. 窗口属性 -->
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- 导航栏颜色 -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <!-- 状态栏图标颜色: true=深色图标, false=浅色图标 -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- 导航栏图标颜色 -->
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- 3. 文字外观 (TextAppearance) -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.SKY.HeadlineLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.SKY.BodyMedium</item>

        <!-- 4. 组件样式覆盖 -->
        <item name="buttonStyle">@style/Widget.SKY.Button</item>
        <item name="textInputStyle">@style/Widget.SKY.TextInput</item>
        <item name="toolbarStyle">@style/Widget.SKY.Toolbar</item>
        <item name="cardViewStyle">@style/Widget.SKY.CardView</item>

        <!-- 5. 形状 (圆角) -->
<!--        <item name="shapeCornerSmall">8dp</item>-->
<!--        <item name="shapeCornerMedium">16dp</item>-->
<!--        <item name="shapeCornerLarge">24dp</item>-->

        <!-- 6. 其他 -->
        <item name="elevationOverlayEnabled">true</item> <!-- 深色模式下提升组件层次 -->
    </style>


    <style name="AppTheme.SKY.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SKY.TabsTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_16</item>
    </style>



<!-- 自定义大标题样式 -->
<style name="TextAppearance.SKY.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
    <item name="fontFamily">@font/icomoon</item> <!-- 使用自定义字体 -->
    <item name="android:textColor">@color/headline_text</item>
    <item name="android:textSize">28sp</item>
    <item name="android:letterSpacing">0.01</item>
</style>

<!-- 自定义普通文本样式 -->
<style name="TextAppearance.SKY.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
    <item name="fontFamily">@font/icomoon</item>
    <item name="android:textColor">@color/body_text</item>
</style>

<!-- 自定义按钮样式 -->
<style name="Widget.SKY.Button" parent="Widget.Material3.Button">
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">false</item> <!-- 取消全大写 -->
    <item name="cornerRadius">12dp</item> <!-- 圆角 -->
    <item name="android:insetTop">12dp</item>
    <item name="android:insetBottom">12dp</item>
</style>

<!-- 自定义 TextInputLayout 样式 -->
<style name="Widget.SKY.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
    <item name="boxCornerRadiusTopStart">8dp</item>
    <item name="boxCornerRadiusTopEnd">8dp</item>
    <item name="boxCornerRadiusBottomStart">8dp</item>
    <item name="boxCornerRadiusBottomEnd">8dp</item>
</style>

<!-- 自定义 Toolbar 样式 -->
<style name="Widget.SKY.Toolbar" parent="Widget.Material3.Toolbar.Surface">
    <item name="titleTextColor">?attr/colorOnPrimary</item>
    <item name="navigationIconTint">?attr/colorOnPrimary</item>
    <item name="android:elevation">4dp</item>
</style>

<!-- 自定义 CardView 样式 -->
<style name="Widget.SKY.CardView" parent="Widget.Material3.CardView.Elevated">
    <item name="cardCornerRadius">16dp</item>
    <item name="cardElevation">6dp</item>
</style>
</resources>

